{
  "files.encoding": "utf8",
  "editor.detectIndentation": false,
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.tabSize": 2,
  "editor.rulers": [
    {
      "column": 100
    }
  ],
  "files.associations": {
    "*.blade.php": "html"
  },
  "[html]": {
    "editor.defaultFormatter": "vscode.html-language-features"
  },
  "[markdown]": {
    "editor.formatOnSave": false
  }
}
